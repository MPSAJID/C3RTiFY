<div class="navbar">
    <h1>C3RTiFY</h1>
</div>
<div class="navbar-usd">
    <% if (user) { %>
        <!-- Display content for authenticated user -->
        <% if (user.email) { %>
            <p>Welcome, <%= user.email %>!</p>
        <% } %>
        <form action="/logout" method="POST" style="display: inline;">
            <button type="submit">Logout</button>
        </form>
    <% } else { %>
        <!-- Display content for non-authenticated user --> 
        <p>Please login/signup</p>
        <a href="/signup">Sign-Up</a>&nbsp;
        <a href="/login">Log-In</a>&nbsp;
    <% } %>         
</div>
